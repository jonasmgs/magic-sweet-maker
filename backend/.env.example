# ===============================
# CONFIGURAÇÃO DO SERVIDOR
# ===============================
PORT=3000
NODE_ENV=development

# ===============================
# JWT (JSON Web Token)
# ===============================
# Gere uma chave segura: openssl rand -base64 64
JWT_SECRET=sua-chave-secreta-muito-segura-mude-em-producao
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===============================
# BANCO DE DADOS
# ===============================
DATABASE_PATH=./database.sqlite

# ===============================
# GROQ API (Mixtral - GRÁTIS!)
# ===============================
# Obtenha sua API key em: https://console.groq.com
GROQ_API_KEY=gsk_sua-api-key-aqui
GROQ_MODEL=mixtral-8x7b-32768

# ===============================
# REPLICATE API (SDXL - ~$0.002/imagem)
# ===============================
# Obtenha sua API key em: https://replicate.com
REPLICATE_API_TOKEN=r8_sua-api-key-aqui
REPLICATE_MODEL=stability-ai/sdxl:39ed52f2a78e934b3ba6e2a89f5b1c712de7dfea535525255b1aa35c5565e08b

# ===============================
# SISTEMA DE CRÉDITOS
# ===============================
FREE_CREDITS=3
PREMIUM_CREDITS=100
CREDIT_RENEWAL_DAYS=30

# ===============================
# CACHE
# ===============================

# ===============================
# CONFIGURAÇÃO DO SERVIDOR
# ===============================
PORT=3000
NODE_ENV=development

# ===============================
# JWT (JSON Web Token)
# ===============================
# Gere uma chave segura: openssl rand -base64 64
JWT_SECRET=sua-chave-secreta-muito-segura-mude-em-producao
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===============================
# BANCO DE DADOS
# ===============================
DATABASE_PATH=./database.sqlite

# ===============================
# OPENAI API
# ===============================
OPENAI_API_KEY=sk-sua-api-key-aqui
OPENAI_TEXT_MODEL=gpt-4
OPENAI_IMAGE_MODEL=dall-e-3

# ===============================
# SISTEMA DE CRÉDITOS
# ===============================
FREE_CREDITS=3
PREMIUM_CREDITS=100
CREDIT_RENEWAL_DAYS=30

# ===============================
# CACHE
# ===============================
CACHE_MAX_SIZE=500
CACHE_TTL_SECONDS=86400

# ===============================
# RATE LIMITING
# ===============================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# ===============================
# COMPRESSÃO DE IMAGEM
# ===============================
IMAGE_QUALITY=80
IMAGE_MAX_WIDTH=512
IMAGE_MAX_HEIGHT=512
